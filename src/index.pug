extends pug/base

prepend vars
	- title = 'Тестовое задание'

append vars
	- baseDir = ''

append styles

block content
	include pug/data

	article.form.grid-container
		section.form__section.main-info.grid-x.grid-padding-x
			.main-info__photo.cell.medium-2
				img(src="images/avatar.jpg" alt="avatar")

			.cell.medium-6
				each field in mainInfo
					.main-info__field
						input(type="text" placeholder=field.name value=field.value)

		section.form__section.skills.grid-x.grid-padding-x
			h2.form__heading.cell Навыки
			each skill in skills
				.skills__item.cell.small-4.large-2
					label
						input(type="checkbox" value="Y" checked=skill.value)
						span #{skill.name}

		section.form__section.script-skill.grid-x.grid-padding-x
			.script-skill__graph.cell.medium-4
				svg(version="1.1" xmlns="http://www.w3.org/2000/svg")
					path(fill-rule="evenodd" clip-rule="evenodd" fill="#0093D7" d="M206.7,28c29.1,23.1,47.8,59.2,47.8,99.6h-54c0-25.3-10.4-43.4-27.5-57.3L206.7,28z")
					path#js-arrow(fill-rule="evenodd" clip-rule="evenodd" fill="#3E3D40" d="M140.3,127.8c0,5.1-4.2,9.2-9.3,9.2l-54.8-8.8l54.9-9.8l0,0C136.2,118.4,140.3,122.7,140.3,127.8L140.3,127.8z")
					path(fill-rule="evenodd" clip-rule="evenodd" fill="#A3CD3B" d="M56.2,23C76.8,8.5,101.9,0,129.1,0c27.2,0,52.4,8.5,72.9,23l-34.5,43c-14.7-9.9-26.3-12.2-38.4-12.2c-12.1,0-26.2,4.4-38.4,12.2L56.2,23z")
					path(fill-rule="evenodd" clip-rule="evenodd" fill="#FFC815" d="M1,127.6C1,87.2,20.2,51.1,50.2,28L85,70.3C66.3,85,56.6,102.3,56.6,127.6H1z")

			.cell.medium-4
				h2.form__heading
					| Мой уровень владения #[br]
					| Java Script
				.script-skill__value.js-value
